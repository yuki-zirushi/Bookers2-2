<%= render 'books/list', user: @user, book_new: @book_new %>

      <div class="col-md-8 offset-md-1">
        <h2>Book detail</h2>
        <table class="table">
          <tbody>
            <tr>
              <td>
                <%= link_to user_path(@user.id) do %>
                  <%= attachment_image_tag @user, :profile_image, format: 'jpeg', fallback: "no_image.jpeg", size: "40x40" %><br>
                  <%= @user.name %>
                <% end %>
              </td>
              <td><%= link_to @book.title, "/books/#{@book.id}" %></td>
              <td><%= @book.body %></td>
              <td></td>
              <td></td>
            </tr>
          </tbody>
        </table>
      </div>

    </div>
  </div>
</main>
